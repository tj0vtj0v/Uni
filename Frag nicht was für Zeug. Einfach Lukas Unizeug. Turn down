package palindrom;

public class Palindrom {
    public static void main(String[] args) {
        String word = "Reliefpfeiler";
        String wordInLowerCase = word.toLowerCase();
        System.out.println(palindrom(wordInLowerCase));
    }

    private static boolean palindrom(String word) {
        // Schleife für die erste Hälfte des Wortes -> zweite Hälfte wird ja mit der ersten Verglichen
        for (int indexChar = 0; indexChar < word.length() / 2; indexChar++) {
            // Vergleichen der Buchstaben (bsp: 1 mit dem letzen)
            // Wenn es nicht gleich ist, kann es kein Palindrom sein
            if (word.charAt(indexChar) != word.charAt((word.length() - 1) - indexChar)) {
                return false;
            }
        }
        // Wenn es bis hier durchgekommen ist, heißt das, dass es ein Palindrom sein muss, da die Buchstaben immer gleich waren
        return true;
    }
}
